---
import Header from '../components/Header';
import Footer from '../components/Footer';

const {frontmatter} = Astro.props;

const imagePath = frontmatter.image ? frontmatter.image : "/images/social/card-summary-large.png";
const socialImageUrl = new URL(imagePath, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <title>{frontmatter.title} - Operately Employee Playbook</title>
    {frontmatter.description? <meta name="description" content={frontmatter.description} /> <meta name="twitter:description" content={frontmatter.description} /> : null}
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:site_name" content="Operately" />
    <meta property="og:image" content={socialImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@operately" />
    <meta name="twitter:title" content={frontmatter.title} />
    <meta name="twitter:image" content={socialImageUrl} />
  </head>
  <body>
    <div class="flex min-h-full flex-col">
      <div class="mx-auto flex w-full max-w-7xl items-start gap-x-8 px-4 py-10 sm:px-6 lg:px-8 mt-10">
        <aside class="sticky top-8 w-80 shrink-0 hidden sm:block">
          <header class="">
            <p><a href="/playbook/" class="text-operately-blue hover:text-operately-dark-blue underline">Operately Employee Handbook</a></p>
            <h1 class="text-3xl font-bold mb-2 mt-4">{frontmatter.title}</h1>
            
            {frontmatter.nextChapter ? <p class="text-base text-gray-600">Next: <a href={`/playbook/${frontmatter.nextChapter}`} class="text-operately-blue hover:text-operately-dark-blue underline">{frontmatter.nextChapterTitle}</a></p> : null}
          </header>
        </aside>
    
        <main class="flex-1 mt-10 prose prose-a:text-operately-blue hover:prose-a:text-operately-dark-blue">
          <!-- Main area -->
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
